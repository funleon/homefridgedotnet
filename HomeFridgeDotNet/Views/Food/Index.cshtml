@model IEnumerable<HomeFridgeDotNet.Models.FoodItem>

@{
    ViewData["Title"] = "食品列表";
}

<h1>食品列表</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">新增食品</a>
</p>

<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchQuery" class="form-control" placeholder="搜尋食品..." value="@ViewBag.SearchQuery" />
        <div class="input-group-append">
            <button type="submit" class="btn btn-outline-secondary">搜尋</button>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpiryDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StorageLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsedPercentage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            
                var today = DateTime.Today;
                var expiryDate = item.ExpiryDate.Date;
                var daysUntilExpiry = (expiryDate - today).TotalDays;
                string backgroundColor = "";

                if (item.UsedPercentage == 100)
                {
                    backgroundColor = "background-color: lightgray;";
                }
                else if (daysUntilExpiry <= 3 && daysUntilExpiry >= 0)
                {
                    backgroundColor = "background-color: darkorange;";
                }
                else if (daysUntilExpiry < 0)
                {
                    backgroundColor = "background-color: red;";
                }
            
            <tr style="@backgroundColor">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExpiryDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StorageLocation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UsedPercentage) %
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info">編輯</a> |
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('確定要刪除此食品嗎？');">刪除</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>